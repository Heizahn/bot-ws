{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": false, // Puedes activarlo más tarde
		"noImplicitAny": false, // Puedes activarlo más tarde
		"sourceMap": true,
		"declaration": true,
		"resolveJsonModule": true,
		"allowJs": true, // Permite usar archivos JS existentes
		"checkJs": false, // No verifica tipos en archivos JS (puedes activarlo después)
		"skipLibCheck": true, // No verifica librerías externas
		"typeRoots": [
			"node_modules/@types",
			"src/@types"
		],
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"/node_modules",
		"**/*.spec.ts",
		"/dist"
	]
}